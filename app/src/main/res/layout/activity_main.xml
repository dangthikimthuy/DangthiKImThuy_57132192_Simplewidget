<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên" />

    <EditText
        android:id="@+id/Ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="nhập tên của bạn" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày Sinh" />

    <EditText
        android:id="@+id/NgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|date"
        android:text="ngày sinh của bạn"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GIỚI TÍNH" />

    <RadioGroup
        android:id="@+id/gioitinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nữ" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/xemphim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem Phim" />

        <CheckBox
            android:id="@+id/nghenhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nghe Nhạc" />

        <CheckBox
            android:id="@+id/cafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đi Cafe " />

        <CheckBox
            android:id="@+id/onha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ở Nhà Một Mình" />

        <CheckBox
            android:id="@+id/nauan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nấu Ăn" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỞ THÍCH KHÁC" />

    <EditText
        android:id="@+id/stk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="sở thích khác"/>

    <Button
        android:id="@+id/xacnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="XÁC NHẬN" />
</LinearLayout>